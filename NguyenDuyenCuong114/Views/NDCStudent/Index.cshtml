@model IEnumerable<NguyenDuyenCuong114.NDCStudent>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NDCStudentName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sdt)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NDCStudentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sdt)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.NDCStudentID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.NDCStudentID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.NDCStudentID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
